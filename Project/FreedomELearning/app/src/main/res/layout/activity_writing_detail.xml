<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/question_writing_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/tv_user_writing_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="15"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="No answer yet!"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_writing_1"
            android:layout_margin="10dp"

            android:layout_weight="4"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <EditText
                android:id="@+id/edt_teacher_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="false"
                android:background="@null"
                android:gravity="top|left"
                android:hint="Write your answer here..."
                android:inputType="textMultiLine"
                android:lines="20"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textColorHint="#c7c7c7"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <Button
        android:id="@+id/teacher_writing_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/buttonshape"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</LinearLayout>
