<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">

        <TextView
            android:id="@+id/speaking_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test quest"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/record_button"
                android:text="start record"
                android:textSize="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btnPlay_Speaking_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:src="@drawable/ic_play_50dp" />

                    <TextView
                        android:id="@+id/Time_Speaking_1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"

                        android:layout_toRightOf="@+id/btnPlay_Speaking_1"
                        android:gravity="center"
                        android:text="00:00/00:00"
                        android:textAlignment="center"
                        android:textSize="20dp" />

                    <SeekBar
                        android:id="@+id/seekBar_Speaking_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/Time_Speaking_1"
                        android:thumb="@drawable/seekba_custom_thumb" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDelete_Record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/delete_disable_button"
                    android:text="delete record"
                    android:textSize="0dp" />

                <Button
                    android:id="@+id/btnUpload_Record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/submit_disable_button"
                    android:text="upload record"
                    android:textSize="0dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>