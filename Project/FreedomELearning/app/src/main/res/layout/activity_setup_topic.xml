<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".model.setup.SetupTopicActivity">


            <EditText
                android:id="@+id/topic_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Topic id"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Topic title"
                app:layout_constraintTop_toBottomOf="@id/topic_id" />

            <EditText
                android:id="@+id/topic_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Topic level"
                app:layout_constraintTop_toBottomOf="@id/topic_title" />

            <EditText
                android:id="@+id/listening_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Listening audio"
                app:layout_constraintTop_toBottomOf="@id/topic_level" />

            <EditText
                android:id="@+id/listening_transcript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Listening transcript"
                app:layout_constraintTop_toBottomOf="@id/listening_audio" />

            <EditText
                android:id="@+id/listening_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Listening question 1"
                app:layout_constraintTop_toBottomOf="@id/listening_transcript" />

            <EditText
                android:id="@+id/listening_question1_ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Listening question 1 ans 1"
                app:layout_constraintTop_toBottomOf="@id/listening_question1" />

            <EditText
                android:id="@+id/listening_question1_ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Listening question 1 ans 2"
                app:layout_constraintTop_toBottomOf="@id/listening_question1_ans1" />

            <EditText
                android:id="@+id/listening_question1_ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Listening question 1 ans 3"
                app:layout_constraintTop_toBottomOf="@id/listening_question1_ans2" />

            <EditText
                android:id="@+id/listening_question1_ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Listening question 1 ans 4"
                app:layout_constraintTop_toBottomOf="@id/listening_question1_ans3" />

            <EditText
                android:id="@+id/speaking_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Speaking question"
                app:layout_constraintTop_toBottomOf="@id/listening_question1_ans4" />

            <EditText
                android:id="@+id/speaking_ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Speaking ans"
                app:layout_constraintTop_toBottomOf="@id/speaking_question" />

            <EditText
                android:id="@+id/reading_article"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Reading_article"
                app:layout_constraintTop_toBottomOf="@id/speaking_ans" />

            <EditText
                android:id="@+id/reading_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Reading_question"
                app:layout_constraintTop_toBottomOf="@id/reading_article" />

            <EditText
                android:id="@+id/reading_question1_ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reading question 1 ans 1"
                app:layout_constraintTop_toBottomOf="@id/reading_question" />

            <EditText
                android:id="@+id/reading_question1_ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reading question 1 ans 2"
                app:layout_constraintTop_toBottomOf="@id/reading_question1_ans1" />

            <EditText
                android:id="@+id/reading_question1_ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reading question 1 ans 3"
                app:layout_constraintTop_toBottomOf="@id/reading_question1_ans2" />

            <EditText
                android:id="@+id/reading_question1_ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reading question 1 ans 4"
                app:layout_constraintTop_toBottomOf="@id/reading_question1_ans3" />

            <EditText
                android:id="@+id/writing_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="writing question"
                app:layout_constraintTop_toBottomOf="@id/reading_question1_ans4" />

            <EditText
                android:id="@+id/writing_ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Writing ans"
                app:layout_constraintTop_toBottomOf="@id/writing_question" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/writing_ans" />

        </android.support.constraint.ConstraintLayout>
    </TableLayout>
</ScrollView>