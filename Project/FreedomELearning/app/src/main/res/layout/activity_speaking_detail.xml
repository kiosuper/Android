<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnPlay_Speaking_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_play_circle_outline_24dp" />

            <TextView
                android:id="@+id/Time_Speaking_comment"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/btnPlay_Speaking_comment"
                android:gravity="center"
                android:text="00:00/00:00"
                android:textAlignment="center" />

            <SeekBar
                android:id="@+id/seekBar_Speaking_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/Time_Speaking_comment" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="4"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">

        <EditText
            android:id="@+id/edt_teacher_comment_speaking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="false"
            android:background="@null"
            android:gravity="top|left"
            android:hint="Write your answer here..."
            android:inputType="textMultiLine"
            android:lines="20"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColorHint="#c7c7c7"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/teacher_speaking_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@drawable/buttonshape"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</LinearLayout>
