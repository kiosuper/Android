<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/BoomMenu"
                android:paddingBottom="5dp"
                android:text="Title"
                android:textColor="#000080"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_topic_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_topic_title"
                android:layout_toRightOf="@+id/BoomMenu"
                android:text="Level"
                android:textColor="#545454"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_teacher_speaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_topic_title"
                android:background="@drawable/buttonshape"
                android:text="Speaking" />

            <Button
                android:id="@+id/btn_teacher_writing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/btn_teacher_speaking"
                android:background="@drawable/buttonshape"
                android:text="Writing" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>