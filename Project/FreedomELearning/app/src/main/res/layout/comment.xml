<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_teacher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/user_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_teacher"
            android:layout_marginTop="10dp"
            android:text="Teacher name"
            android:textColor="#0000FF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/img_teacher"
            app:layout_constraintStart_toStartOf="@id/img_teacher"
            app:layout_constraintTop_toBottomOf="@id/img_teacher" />

        <TextView
            android:id="@+id/teacher_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/teacher_name"
            android:layout_alignBottom="@id/img_teacher"
            android:layout_marginLeft="16dp"
            android:text="Comment"
            android:textColor="#2A2A2A"
            app:layout_constraintStart_toEndOf="@id/img_teacher"
            app:layout_constraintTop_toTopOf="@id/img_teacher" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
